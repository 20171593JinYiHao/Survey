<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="32dp"
        android:text="WELCOME TO"
        android:textColor="#000000"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_alignLeft="@id/txt1"
        android:text="TAKE PART IN OUR SURVEY"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:layout_alignLeft="@id/txt1"
        android:layout_marginTop="20dp"
        android:text="Before we start, here are things you should know."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt3"
        android:layout_alignLeft="@id/txt3"
        android:layout_marginTop="20dp"
        android:text="-Please be honest when making your choice."
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt4"
        android:layout_alignLeft="@id/txt3"
        android:layout_marginTop="20dp"
        android:text="-We are just doing a research so you don't have to fake your information."
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt5"
        android:layout_alignLeft="@id/txt3"
        android:layout_marginTop="20dp"
        android:text="-Please follow the step we designed for you and don't skeep any questions."
        android:textSize="16dp" />

    <CheckBox
        android:id="@+id/ckb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt6"
        android:layout_alignLeft="@id/txt3"
        android:layout_marginTop="24dp"
        android:text="I accept these requests"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ckb1"
        android:layout_alignLeft="@id/txt3"
        android:layout_marginTop="24dp"
        android:layout_marginRight="64dp"
        android:background="@color/colorPrimary"
        android:text="LET'S START!"
        android:textColor="#000000" />
    <!-- END    : Your code should be within this block -->
</RelativeLayout>
